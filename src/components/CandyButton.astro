---
const { content, icon } = Astro.props;
---

<button class="candy-button" data-ico={icon}>{content}</button>

<style>
  .candy-button {
    --maring: .2em;
    --negative-margin: -.2em;
    display: grid;
    grid-auto-flow: column;
    grid-gap: 0.5em;
    position: relative;
    margin: 1em auto;
    border: solid var(--maring);
    padding: 1em 1.5em;
    border-radius: 9em;
    background: var(--dark-blue-tranparency);
    color: var(--white-smooth);
    font-weight: 600;
    font-size: calc(1.5em / 1.25);
    cursor: pointer;
    &::before {
      position: absolute;
      z-index: 2;
      inset: var(--negative-margin);
      border-radius: inherit;
      background: linear-gradient(to right bottom, var(--yellow), var(--fuxia));
      mix-blend-mode: darken;
      content: "";
    }

    &::after {
      filter: brightness(0) invert(1);
      content: attr(data-ico);
    }
  }

  @media (width >= 744px) {
    .candy-button {
      margin: 0 1rem;
    }
  }
</style>
