---
import Icon from "./Icon.astro";
const { type, label, href = "#" } = Astro.props;
---

<li class="item-header">
  <a href={href}>
    <Icon name={type} />
    <span>{label}</span>
  </a>
</li>

<style>
  .item-header {
    list-style: none;
    margin: 0 15px;
    a {
      display: flex;
      span {
        margin-left: 10px;
      }
    }
  }
</style>
