---
import Icon from "./Icon.astro";
const { type, label, href = "#" } = Astro.props;
---

<li class="item-header">
  <a href={href} class="item-link">
    <Icon name={type} />
    <div>
      {label}
    </div>
  </a>
</li>

<style>
  .item-header {
    list-style: none;
    padding: 0 15px;
  }
  .item-link {
    display: flex;
    align-items: flex-start;
    border-radius: 10px;
    border-bottom: 5px solid rgba(255, 255, 255, 0);;
  }
  .item-link:hover {
    border-bottom: 5px solid rgba(255, 255, 255, 0.063);;
  }
</style>
