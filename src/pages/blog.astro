---
import BaseLayout from "../layouts/BaseLayout.astro";
const glob = await Astro.glob('./blog/*');
const posts = glob.map((post) =>{
	const { title, content, image = '' } = post?.frontmatter;
	const { url } = post;
	return { title, content, image, url };
})
---

<BaseLayout
	title="blog"
	content="My personal blog"
>
<h1>Blog</h1>
<p>aqui vamos a listar los articulos del blog</p>
<div>
	{posts.map((post) => (
		<article>
			<a href={post.url}>{post.title}</a>
			<p>{post.content}</p> <br>
		</article>
	))}
</div>
</BaseLayout>